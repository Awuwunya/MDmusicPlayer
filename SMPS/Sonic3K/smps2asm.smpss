	sinc "..\SMPS\SMPS default notes.smpss"

?fmc {
	!0xE4 > ssVolFM: $2!-(.db | 0x80);
}

?psgc {
	!0xE4 > ssVolPSG: $2!((.db >> 3) ^ 0xF);
}

?comm {
	!0xE0 > sPan: .db & 0xC0, .lb & 0x3F {
		:?0 {
			=spNone 0x00
			=spRight 0x40
			=spLeft 0x80
			=spCenter 0xC0
		}

		c .n1 == 0 {
			:-1
		}
	}
	!0xE1 > ssDetune: .db;
	!0xE2 > sFade: .db;
	!0xE3 > sStopFM: {
		;
	}
	!0xE5 > saVolFMP: .db, .db;
	!0xE6 > saVolFM: .db;
	=sHold 0xE7
	!0xE8 > sGate: .db;
	!0xE9 > sSpDashRev:;
	!0xEA > sPlayDAC: .db | 0x80;
	!0xEB > sLoopExit: .db, .dw {
		~"£_Jumpe?"" :1
	}
	!0xEC > saVolPSG: .db;
	!0xED > ssTranspose: $2!(.db-0x40);
	!0xEE > sYM1cmd: .db, .db;
	!0xEF, 0-0x7F > sPatFM: .lb & 0x7F;
	!0xEF, 0x80-0xFF > sPatFM: .lb & 0x7F, .db - 0x81;
	!0xF0 > ssModZ80: .db, .db, .db, .db;
	!0xF1 > sModEnv: .db, .db {
		:?0 {
			?modenv;
		}
		:?1 {
			?modenv;
		}
	}
	!0xF2 > sStop:{
		;
	}
	!0xF3 > sNoisePSG: .db;
	!0xF4, 0x80 > sModOn:;
	!0xF4 > sModEnv: .lb {
		:?0 {
			?modenv;
		}
	}
	!0xF5 > sVolEnvPSG: .db {
		:?0 {
			?volenv;
		}
	}
	!0xF6 > sJump: .dw {
		~"£_Jump?" :0
		;
	}
	!0xF7 > sLoop: .db, .db, .dw {
		~"£_Loop?" :2
	}
	!0xF8 > sCall: .dw {
		~"£_Call?" :0
	}
	!0xF9 > sRet: {
		;
	}
	!0xFA > sModOff:;
	!0xFB > saTranspose: .db;
	!0xFC > sCont: .dw {
		~"£_Continous?"" :0
	}
	!0xFD > sRawFreq: .db;
	!0xFE > sSpecFM3: .db, .db, .db, .db {
		%; Broken?
	}
	!0xFF, 0 > ssTempo: .db;
	!0xFF, 1 > sPlaySound: .db;
	!0xFF, 2 > sMusPause: .db;
	!0xFF, 3 > sCopyMem: .dw, .db {
		%; No song should ever use this command. It may good idea to remove it.
	}
	!0xFF, 4 > ssTickMul: .db;
	!0xFF, 5 > sSSGEG: .db, .db, .db, .db {
		=op2 .a2
		:=2 .a1
		:=1 \op2\
	}
	!0xFF, 6 > sVolEnvFM: .db, .db;
	!0xFF, 7 > sSpDashReset:;
}
